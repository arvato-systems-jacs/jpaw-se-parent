        <testng.version>6.9.10</testng.version>         <!-- UPTODATE 2016-02-23 -->
        <junit.version>4.12</junit.version>             <!-- UPTODATE 2015-10-17 -->
        <jmockit.version>1.22</jmockit.version>         <!-- UPTODATE 2016-02-28 -->

        <!--  benchmarking -->
        <jmh.version>1.11.3</jmh.version>               <!-- http://openjdk.java.net/projects/code-tools/jmh/ -->

        <!-- org.apache.maven.plugins -->
        <antrun.plugin.version>1.8</antrun.plugin.version>
        <compiler.plugin.version>3.5.1</compiler.plugin.version>
        <clean.plugin.version>2.6.1</clean.plugin.version>      <!-- 3.0.0 -->
        <enforcer.plugin.version>1.4.1</enforcer.plugin.version>
        <ear.plugin.version>2.10.1</ear.plugin.version>
        <ejb.plugin.version>2.5.1</ejb.plugin.version>
        <jar.plugin.version>2.6</jar.plugin.version>
        <rar.plugin.version>2.4</rar.plugin.version>
        <war.plugin.version>2.6</war.plugin.version>
        <javadoc.plugin.version>2.10.3</javadoc.plugin.version>
        <shade.plugin.version>2.4.3</shade.plugin.version>
        <source.plugin.version>2.4</source.plugin.version>      <!-- 3.0.0: properties renamed -->
        <surefire.plugin.version>2.19.1</surefire.plugin.version>
        <failsafe.plugin.version>2.19.1</failsafe.plugin.version>
        <assembly.plugin.version>2.6</assembly.plugin.version>

        <!-- org.codehaus.mojo maven plugins -->
        <exec.plugin.version>1.4.0</exec.plugin.version>
        <build-helper.plugin.version>1.10</build-helper.plugin.version>

        <!-- org.apache.felix plugins -->
        <bundle.plugin.version>3.0.1</bundle.plugin.version>
    </properties>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
