        <log4j.version>1.2.17</log4j.version>           <!-- Log4j Rev 1 (deprecated) -->
        <log4j2.version>2.5</log4j2.version>            <!-- -->

        <!-- core tools used -->
        <guava.version>19.0</guava.version>             <!-- http://code.google.com/p/guava-libraries/ -->
        <xtend.version>2.9.2</xtend.version>            <!-- UPTODATE 2015-12-31 -->
        <jodatime.version>2.9.2</jodatime.version>      <!-- UPTODATE 2015-09-20 -->
        <jsap.version>2.1</jsap.version>
        <reflections.version>0.9.10</reflections.version><!-- UPTODATE 2015-02-07 -->
        <icu.version>56.1</icu.version>                 <!-- UPTODATE 2015-04-10 -->
        <disruptor.version>3.3.4</disruptor.version>    <!-- UPTODATE 2016-03-10 -->
